<%= form_for user do |f| %>

  <%= render partial: 'shared/error_messages', locals: { resource: user } %>

   <div class="input-group col-md-6">
      <span class="input-group-addon">Nome</span>
      <%= f.text_field :name, class: "form-control" %>
   </div>
   <br>

   <div class="input-group col-md-6">
      <span class="input-group-addon">Email</span>
      <%= f.text_field :email, class: "form-control" %>
   </div>
  <br>

   <div class="input-group col-md-6">
      <span class="input-group-addon">Idade</span>
      <%= f.number_field :age, class: "form-control" %>
   </div>
    <br>

   <div class="input-group col-md-6">
      <span class="input-group-addon">Sexo</span>
      <% options = [ ["Feminino", User::FEMALE], ["Masculino", User::MALE]   ] %>
      <%= f.select :gender, options, { include_blank: " -- Escolha um sexo -- "}, class: "form-control" %>
   </div>
   <br>


   <div class="input-group col-md-6">
      <span class="input-group-addon">Senha</span>
      <%= f.password_field :password, autocomplete: "off" %></div>
   </div>
   <br>




   <div class="input-group col-md-6">
      <span class="input-group-addon">Confirmação Senha</span>
      <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
   </div>
   <br>


  <%= f.submit 'Salvar', class: 'btn btn-success' %>

<% end %>
