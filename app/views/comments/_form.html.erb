<%= form_for comment do |f| %>

 <div class="input-group">
   <span class="input-group-addon">
     <i class="glyphicon glyphicon-user"></i>
   </span>
   <% elements = commentables.map { |commentable| [ commentable.name, commentable.id ] } %>
   <% options = options_for_select elements %>
   <%= f.select :commentable_id, options, class: 'form-control' %>
 </div>
 
 <div class="input-group">
   <span class="input-group-addon">
     <i class="glyphicon glyphicon-comment"></i>
   </span>
   <%= f.text_area :content, class: 'form-control' %>
 </div>
 
 <%= f.submit "Salvar", class: 'btn btn-primary save-comment' %>
<% end %>
